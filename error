Interface:

public interface ICompanyStats<T>
    {
        IEnumerable<T> GetCompanyStats(DateTime? date,
                 int? stats, string statFormat);
    }


Derived class:
}

public class CompanyStatsRepo<T> where T: ICompanyStats<T>
    {
	//Injection code and business logic 
    }

Registry:

public DefaultRegistry() {


            For(typeof(ICompanyStats<>)).Use(typeof(CompanyStatsRepo<>));
            var container = new Container(x =>
